<html>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark"> <a class="navbar-brand" href="/">Scholarshipr</a>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav"><a class="nav-item nav-link" href="/all">All</a><a class="nav-item nav-link"
        href="/suggested">Suggested</a><a class="nav-item nav-link" href="/public/create.html">Add</a><a
        class="nav-item nav-link" href="/export">Export</a></div>
  </div>
</nav>

<div class="container">
  <div class="row mt-2">
    <div class="col-3">
    </div>
    <div class="col-6">
      <h5>Edit scholarship:</h5>

      <form method="POST" action="/update?_id=<%= scholarship._id %>">
        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" class="form-control" id="name" value="<%= scholarship.name %>" required>
        </div>
        
        <div class="form-group">
          <label for="org">Organization</label>
          <input name="org" id="org" class="form-control" value="<%= scholarship.org %>">
        </div>

        
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" id="description" class="form-control" value="<%= scholarship.description %>" rows="2"><%= scholarship.description %></textarea>
          
        </div>

        <div class="row">
          <div class="col">
            <label for="dollarAmount">Award amount</label>
            <input name="dollarAmount" id="dollarAmount" class="form-control" type="number" value="<%= scholarship.dollarAmount %>">
          </div>
          <div class="col form-check">
            <label for="approved">Status:</label> <br/>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="approvalStatus" id="approved" value="1" <% if(scholarship.approvalStatus=="true"){%>checked<%}%>>
              <label class="form-check-label" for="approved">Approved</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="approvalStatus" id="pending" value="0" <% if(scholarship.approvalStatus=="false"){%>checked<%}%>>
              <label class="form-check-label" for="pending">Pending</label>
            </div>
            
          </div>
        </div>

        
        <div class="row mt-2">
          <div class="col">
            <div class="form-group">
            <label for="dueDate">Application deadline</label>
            <input name="dueDate" type="date" id="dueDate" class="form-control" value="<%= (scholarship.dueDate ? scholarship.dueDate.toISOString().slice(0, 10) : null) %>">
          </div>
          </div>
          <div class="col">
            <div class="form-group">

            <label for="gpaRequirement">GPA requirement </label>
            <input name="gpaRequirement" id="gpaRequirement" class="form-control" value="<%= scholarship.gpaRequirement %>" type="number" step="0.01" min="0" max="4">
          </div>
          </div>
        </div>
      
        <input type="submit" class="btn btn-primary mb-2" value="Update scholarship!">

        
      </form>
      
    </div>
    <div class="col-3">
    </div>
  </div>
</div>


</html>
